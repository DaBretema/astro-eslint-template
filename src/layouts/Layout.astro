---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				--text: 34, 34, 34; /* #222 */
				--accent: 255, 136, 68; /* #F84 */
				--accent-light: 255, 238, 204; /* #FEC */
				--accent-dark: 68, 51, 34; /* #432 */
				--accent-gradient: linear-gradient(
					25deg,
					rgba(var(--accent), 0.8) 0%,
					rgba(var(--accent), 0.2) 25%,
					rgba(var(--accent), 0.6) 50%,
					rgba(var(--accent), 0.2) 75%,
					rgba(var(--accent), 0.8) 100%
				);
			}
			* {
				color: rgb(var(--text), 0.85);
			}
			html {
				font-family: system-ui, sans-serif;
				background: #fec;
			}
			code {
				font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
					Bitstream Vera Sans Mono, Courier New, monospace;
			}
			mark {
				position: relative;
				display: inline-block;
				background-color: rgba(var(--accent), 0.5);

				font-weight: 600;

				border-radius: 0.15rem;
				padding: 0.1rem 0.4rem;
				margin-right: 0.2rem;

				color: rgb(var(--accent-light));
			}
			mark::after {
				content: '';
				z-index: -1;
				position: absolute;
				top: 4px;
				left: 4px;
				height: 100%;
				width: 100%;
				background-color: rgba(var(--accent), 0.5);

				border-radius: 0.15rem;

				--bg-accent-gradient-angle: -0.8deg;
				transform: rotate(var(--bg-accent-gradient-angle));
				-webkit-transform: rotate(var(--bg-accent-gradient-angle));
				-moz-transform: rotate(var(--bg-accent-gradient-angle));
				-ms-transform: rotate(var(--bg-accent-gradient-angle));
				-o-transform: rotate(var(--bg-accent-gradient-angle));
			}
			.hard-mark-text {
				color: rgba(var(--text), 1.0);
				font-weight: 800;
			}
			.soft-mark-text {
				color: rgba(var(--text), 0.3);
				font-style: italic;
				font-weight: 600;
			}
		</style>
	</body>
</html>
