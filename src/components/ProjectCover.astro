---
export interface Props {
	id: string;
	title: string;
	img: string;
}

const { id, title, img } = Astro.props;

export const COVER_SCALE = 10;
export const COVER_W = 3 * COVER_SCALE;
export const COVER_H = 3.5 * COVER_SCALE;
---

<div class="flex flex-col justify-center">
	<a
		class="hover:scale-105 hover:shadow-2xl hover:contrast-200 inline-block transition-all card-rounded"
		href={`/${id}`}
	>
		<img
			class={`aspect-[3.0/3.5] h-full w-full object-cover card-rounded`}
			src={img}
			alt={`Cover of the project ${title}`}
		/>
		<span
			class="block text-center p-2 font-bold -translate-y-28 bg-accent-dark-75 fg-accent-light"
		>
			{title}
		</span>
	</a>
</div>

<style>
	.card-rounded {
		border-radius: 0.75rem /* 12px */;
	}
</style>
