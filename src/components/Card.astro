---
import { PLACEHOLDER_W, PLACEHOLDER_H } from '../consts/Card.js'

export interface Props {
	id: string
	title: string
	img: string
}

const { id, title, img } = Astro.props
---

<div class='flex flex-col justify-center'>
	<a
		class='hover:scale-105 hover:shadow-2xl hover:contrast-150 inline-block transition-all card-rounded'
		href={`/${id}`}
	>
		<img
			class={`aspect-[${PLACEHOLDER_W}/${PLACEHOLDER_H}] h-full w-full object-cover card-rounded`}
			src={img}
			alt={`Type a nice alt about the ${title}`}
		/>
		<span class='block text-center p-2 font-bold -translate-y-28 bg-accent-dark-75 fg-accent-light'>
			{title}
		</span>
	</a>
</div>

<style>
	.card-rounded {
		border-radius: 0.75rem /* 12px */;
	}
</style>
